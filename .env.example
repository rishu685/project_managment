# Server Configuration
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/projectcamp

# JWT Configuration
ACCESS_TOKEN_SECRET=your_super_secret_access_token_key_here_make_it_long_and_complex
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_here_make_it_different_from_access
REFRESH_TOKEN_EXPIRY=10d

# Email Configuration (Using Mailtrap for development)
MAILTRAP_SMTP_HOST=smtp.mailtrap.io
MAILTRAP_SMTP_PORT=2525
MAILTRAP_SMTP_USER=your_mailtrap_username
MAILTRAP_SMTP_PASS=your_mailtrap_password

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Client URL (for email links and redirects)
CLIENT_SSR_BASE_URL=http://localhost:3000

# Additional Security (Optional)
# NODE_ENV=development
# SESSION_SECRET=your_session_secret_for_additional_security

# File Upload Configuration (Optional)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./public/images

# Email Configuration for Production (Replace Mailtrap)
# SMTP_HOST=your_production_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_production_email
# SMTP_PASS=your_production_email_password
# FROM_EMAIL=noreply@yourdomain.com